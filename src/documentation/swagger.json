{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "HLTV API Rest",
    "description": "<b>Unofficial</b> API Rest for <a href=\"https://www.hltv.org/\">HLTV</a>."
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/v1",
      "description": "Local Server API"
    },
    {
      "url": "https://hltv-api.onrender.com/api/v1",
      "description": "Production Server API"
    }
  ],
  "tags": [
    {
      "name": "General",
      "description": "Abstract routes"
    },
    {
      "name": "Teams",
      "description": "Teams routes"
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "tags": ["General"],
        "summary": "General search in HLTV",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/GeneralSearch"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/ranking/{year}/{month}/{day}/{country}": {
      "get": {
        "tags": ["General"],
        "summary": "Ranking of bests",
        "parameters": [
          {
            "name": "year",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "month",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "day",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "country",
            "in": "path",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Ranking"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/team/info/{teamId}": {
      "get": {
        "tags": ["Teams"],
        "summary": "Info of team",
        "parameters": [
          {
            "name": "teamId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/TeamInfo"
                }
              }
            }
          }
        }
      }
    },
    "/team/search/{teamName}": {
      "get": {
        "tags": ["Teams"],
        "summary": "Search a team",
        "parameters": [
          {
            "name": "teamName",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/TeamSearch"
                }
              }
            }
          }
        }
      }
    },
    "/team/matches/{teamId}": {
      "get": {
        "tags": ["Teams"],
        "summary": "Team matches",
        "parameters": [
          {
            "name": "teamId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/TeamMatches"
                }
              }
            }
          }
        }
      }
    },
    "/search/{playerName}": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "playerName",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {}
      }
    },
    "/info/{playerId}": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {}
      }
    },
    "/expire-all": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Ranking": {
        "type": "object",
        "properties": {
          "teams": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "position": {
                  "type": "object",
                  "properties": {
                    "actual": {
                      "type": "integer"
                    },
                    "change": {
                      "type": "integer"
                    }
                  }
                },
                "name": {
                  "type": "string"
                },
                "link": {
                  "type": "string"
                },
                "points": {
                  "type": "integer"
                },
                "players": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "full_name": {
                        "type": "string"
                      },
                      "nick": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      },
                      "nationality": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "flag": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "navigation": {
            "type": "object",
            "properties": {
              "prev": {
                "type": "string",
                "nullable": true
              },
              "next": {
                "type": "string",
                "nullable": true
              }
            }
          }
        }
      },
      "Search": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "logo": {
            "type": "string"
          }
        }
      },
      "TeamSearch": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Search"
        }
      },
      "GeneralSearch": {
        "type": "object",
        "properties": {
          "search": {
            "type": "object",
            "properties": {
              "players": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Search"
                }
              },
              "teams": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Search"
                }
              },
              "articles": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Search"
                }
              },
              "events": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Search"
                }
              }
            }
          }
        }
      },
      "TeamInfo": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "logo": {
            "type": "string"
          },
          "social": {
            "type": "object"
          },
          "players": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string"
                },
                "nick": {
                  "type": "string"
                },
                "full_name": {
                  "type": "string"
                },
                "nationality": {
                  "type": "object",
                  "properties": {
                    "country": {
                      "type": "string"
                    },
                    "flag": {
                      "type": "string"
                    }
                  }
                },
                "image": {
                  "type": "object",
                  "properties": {
                    "src": {
                      "type": "string"
                    },
                    "alt": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "trophies": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                },
                "image": {
                  "type": "string"
                }
              }
            }
          },
          "country": {
            "type": "string"
          },
          "next_match": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "logo": {
                "type": "string"
              }
            }
          },
          "current_form": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "won": {
                  "type": "boolean"
                }
              }
            }
          },
          "world_ranking": {
            "type": "integer"
          },
          "weeks_in_top30_for_core": {
            "type": "integer"
          },
          "average_player_age": {
            "type": "number"
          },
          "coach": {
            "type": "string"
          }
        }
      },
      "TeamMatches": {
        "type": "object",
        "properties": {
          "matches": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "link": {
                  "type": "string"
                },
                "best_of": {
                  "type": "integer"
                },
                "stars": {
                  "type": "integer"
                },
                "team": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "logo": {
                      "type": "string"
                    },
                    "score": {
                      "type": "integer"
                    },
                    "won": {
                      "type": "boolean"
                    }
                  }
                },
                "enemy": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "logo": {
                      "type": "string"
                    },
                    "score": {
                      "type": "integer"
                    },
                    "won": {
                      "type": "boolean"
                    }
                  }
                },
                "event": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "src": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "pagination": {
            "type": "object",
            "properties": {
              "actual": {
                "type": "integer"
              },
              "max": {
                "type": "integer"
              },
              "total": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  }
}
